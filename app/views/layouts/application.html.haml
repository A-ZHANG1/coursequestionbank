
%link{:href => '//fonts.googleapis.com/css?family=Droid+Serif|Open+Sans:400,800,700', :rel => 'stylesheet', :type => 'text/css'}


%html
  %head
    %title Course Question Bank
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    %div#header
      %h1#banner
        = link_to 'Course Question Bank', problems_path

      - if @current_user
        %ul#navbar
          %li#welcome_message Welcome, #{user_display_name(@current_user)}!
          %li= link_to 'Home', problems_path, :class => 'btn btn-link'
          %li= link_to 'My Collections', profile_path, :class => 'btn btn-link'
          - if can? :manage, Instructor
            %li= link_to 'Admin', admin_path, :class => 'btn btn-link'
          %li
            = form_tag logout_path, :method => 'post' do
              = submit_tag 'Log Out', :class => 'btn btn-link'
    
      %div#flash_message
        - if flash[:notice]
          %p.message= flash[:notice]
        - elsif flash[:warning]
          %p.message= flash[:warning]
        - elsif flash[:error]
          %p.message= flash[:error]

    %div#main
      = yield
